<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/1_step"
        android:layout_width="62dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="145dp"
        android:text="1단계"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/2_step"
        android:layout_width="62dp"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:text="1단계"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/1_step"
        app:layout_constraintStart_toStartOf="@+id/1_step"
        app:layout_constraintTop_toBottomOf="@+id/1_step" />

    <TextView
        android:id="@+id/3_step"
        android:layout_width="62dp"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:text="1단계"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/2_step"
        app:layout_constraintStart_toStartOf="@+id/2_step"
        app:layout_constraintTop_toBottomOf="@+id/2_step" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="104dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="소리 크기"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/3_step" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="251dp"
        android:layout_height="33dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="170dp"
        android:text="졸음 체크 문구 사용 체크"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBar_1"
        android:layout_width="216dp"
        android:layout_height="22dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar_2"
        android:layout_width="216dp"
        android:layout_height="22dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/seekBar_1"
        app:layout_constraintStart_toStartOf="@+id/seekBar_1"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_1" />

    <SeekBar
        android:id="@+id/seekBar_3"
        android:layout_width="216dp"
        android:layout_height="22dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/seekBar_2"
        app:layout_constraintStart_toStartOf="@+id/seekBar_2"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_2" />

    <SeekBar
        android:id="@+id/seekBar_4"
        android:layout_width="216dp"
        android:layout_height="22dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="320dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="1.2/sec"
        app:layout_constraintEnd_toEndOf="@+id/seekBar_1"
        app:layout_constraintStart_toStartOf="@+id/seekBar_1"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="5/sec"
        app:layout_constraintEnd_toEndOf="@+id/seekBar_2"
        app:layout_constraintStart_toStartOf="@+id/seekBar_2"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="30/sec"
        app:layout_constraintEnd_toEndOf="@+id/seekBar_3"
        app:layout_constraintStart_toStartOf="@+id/seekBar_3"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_3" />

    <CheckBox
        android:id="@+id/checkBox_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/seekBar_2"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_1" />

    <CheckBox
        android:id="@+id/checkBox_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/seekBar_3"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_2" />

    <CheckBox
        android:id="@+id/checkBox_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toEndOf="@+id/seekBar_1"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="50dp"
        android:text="초기화"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="50dp"
        android:text="변경 확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/vibration" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/list" />

</android.support.constraint.ConstraintLayout>